#!/usr/bin/env sh

/usr/libexec/PlistBuddy \
-c 'delete :orderedItems' \
~/Library/Preferences/com.apple.Spotlight.plist

/usr/libexec/PlistBuddy \
-c 'add :orderedItems array' \
\
-c 'add :orderedItems:0 dict' \
-c 'add :orderedItems:0:name string APPLICATIONS' \
-c 'add :orderedItems:0:enabled bool YES' \
\
-c 'add :orderedItems:1 dict' \
-c 'add :orderedItems:1:name string MENU_SPOTLIGHT_SUGGESTIONS' \
-c 'add :orderedItems:1:enabled bool NO' \
\
-c 'add :orderedItems:2 dict' \
-c 'add :orderedItems:2:name string MENU_CONVERSION' \
-c 'add :orderedItems:2:enabled bool YES' \
\
-c 'add :orderedItems:3 dict' \
-c 'add :orderedItems:3:name string MENU_EXPRESSION' \
-c 'add :orderedItems:3:enabled bool YES' \
\
-c 'add :orderedItems:4 dict' \
-c 'add :orderedItems:4:name string MENU_DEFINITION' \
-c 'add :orderedItems:4:enabled bool NO' \
\
-c 'add :orderedItems:5 dict' \
-c 'add :orderedItems:5:name string SYSTEM_PREFS' \
-c 'add :orderedItems:5:enabled bool YES' \
\
-c 'add :orderedItems:6 dict' \
