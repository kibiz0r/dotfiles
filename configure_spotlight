-c 'add :orderedItems:14:enabled bool NO' \
\
-c 'add :orderedItems:15 dict' \
-c 'add :orderedItems:15:name string BOOKMARKS' \
-c 'add :orderedItems:15:enabled bool NO' \
\
-c 'add :orderedItems:16 dict' \
-c 'add :orderedItems:16:name string MUSIC' \
-c 'add :orderedItems:16:enabled bool NO' \
\
-c 'add :orderedItems:17 dict' \
-c 'add :orderedItems:17:name string MOVIES' \
-c 'add :orderedItems:17:enabled bool NO' \
\
-c 'add :orderedItems:18 dict' \
-c 'add :orderedItems:18:name string FONTS' \
-c 'add :orderedItems:18:enabled bool NO' \
\
-c 'add :orderedItems:19 dict' \
-c 'add :orderedItems:19:name string MENU_OTHER' \
