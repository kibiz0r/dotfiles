-c 'add :orderedItems:6:enabled bool NO' \
\
-c 'add :orderedItems:7 dict' \
-c 'add :orderedItems:7:name string DIRECTORIES' \
-c 'add :orderedItems:7:enabled bool NO' \
\
-c 'add :orderedItems:8 dict' \
-c 'add :orderedItems:8:name string PRESENTATIONS' \
-c 'add :orderedItems:8:enabled bool NO' \
\
-c 'add :orderedItems:9 dict' \
-c 'add :orderedItems:9:name string SPREADSHEETS' \
-c 'add :orderedItems:9:enabled bool NO' \
\
-c 'add :orderedItems:10 dict' \
-c 'add :orderedItems:10:name string PDF' \
-c 'add :orderedItems:10:enabled bool NO' \
\
-c 'add :orderedItems:11 dict' \
-c 'add :orderedItems:11:name string MESSAGES' \
-c 'add :orderedItems:11:enabled bool NO' \
\
-c 'add :orderedItems:12 dict' \
-c 'add :orderedItems:12:name string CONTACT' \
-c 'add :orderedItems:12:enabled bool NO' \
\
-c 'add :orderedItems:13 dict' \
