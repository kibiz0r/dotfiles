#!/usr/bin/env sh

TARGET=~/Library/Preferences/net.elasticthreads.nv.plist

if [ ! -f $TARGET ]; then
  open /Applications/nvALT.app
  sleep 10
  killall nvALT
fi

DIRECTORY_ALIAS='00000000 01580002 00010c4d 6163696e 746f7368 20484400 00000000 00000000 00000000 0000d443 0529482b 00000029 8afb056e 76414c54 00000000 00000000 00000000 00000000 00000000 00000000 00000000 00000000 00000000 00000000 00000000 00000000 00000000 00000000 0000010f f198d628 b22e0000 00000000 00000001 00030000 09200000 00000000 00000000 00000000 00074472 6f70626f 78000010 00080000 d4433d69 00000011 00080000 d628f87e 00000001 000c0029 8afb0009 a5980006 60ce0002 002c4d61 63696e74 6f736820 48443a55 73657273 3a006b69 62697961 6d613a00 44726f70 626f783a 006e7641 4c54000e 000c0005 006e0076 0041004c 0054000f 001a000c 004d0061 00630069 006e0074 006f0073 00680020 00480044 0012001c 55736572 732f6b69 62697961 6d612f44 726f7062 6f782f6e 76414c54 00130001 2f000015 0002000f ffff0000'
DIRECTORY_ALIAS_DATA=$(echo $DIRECTORY_ALIAS | sed 's/ //g')

defaults write $TARGET DirectoryAlias -data $DIRECTORY_ALIAS_DATA
